{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@/artifacts/*": ["./packages/contracts/artifacts/*"],
      "@/deployments/*": ["./packages/contracts/deployments/*"],
      "@/home/*": ["./packages/home/src/*"],
      "@/home/public/*": ["./packages/home/public/*"],
      "@/typechain/*": ["./packages/contracts/typechain/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["**/*"]
}
